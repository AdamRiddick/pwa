{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "module": "commonJs",
    "moduleResolution": "node",
    "outDir": "./dist/",
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2019",    
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "exclude": ["node_modules", "**/*.spec.ts"],
  "include": ["./src/**/*.ts"]
}